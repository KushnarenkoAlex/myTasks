<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BikeShop</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
 	 <error-code>404</error-code>
 	 <location>/WEB-INF/jsp/error404.jsp</location>
    </error-page>
  <error-page>
 	 <error-code>500</error-code>
 	 <location>/WEB-INF/jsp/error500.jsp</location>
    </error-page>
	<error-page>
  <exception-type>java.lang.Throwable</exception-type>
 	 <location>/WEB-INF/jsp/errorPage.jsp</location>
	</error-page>
  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/BikeShopDB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
  <listener>
    <listener-class>
    		main.java.com.epam.preprod.kushnarenko.listener.ContextListener
    	</listener-class>
  </listener>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CaptchaServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.CaptchaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CaptchaServlet</servlet-name>
    <url-pattern>/captchasService</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BikeListServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.BikeListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BikeListServlet</servlet-name>
    <url-pattern>/bikeList</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>captchaType</param-name>
    <param-value>session</param-value>
  </context-param>
  <context-param>
    <param-name>captchaLiveTime</param-name>
    <param-value>150000</param-value>
  </context-param>
  <context-param>
    <param-name>chekingTime</param-name>
    <param-value>100000</param-value>
  </context-param>
</web-app>