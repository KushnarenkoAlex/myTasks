<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BikeShop</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/error403.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/jsp/error500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>main.java.com.epam.preprod.kushnarenko.exception.UserIsBlockedException</exception-type>
    <location>/WEB-INF/jsp/userIsBlocked.jsp</location>
  </error-page>
  <error-page>
    <exception-type>main.java.com.epam.preprod.kushnarenko.exception.DbCallException</exception-type>
    <location>/WEB-INF/jsp/myErrorPage.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/errorPage.jsp</location>
  </error-page>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/BikeShopDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <listener>
    <listener-class>
    		main.java.com.epam.preprod.kushnarenko.listener.ContextListener
    	</listener-class>
  </listener>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CaptchaServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.CaptchaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CaptchaServlet</servlet-name>
    <url-pattern>/captchasService</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BikeListServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.BikeListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BikeListServlet</servlet-name>
    <url-pattern>/bikeList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BucketServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.BucketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BucketServlet</servlet-name>
    <url-pattern>/bucket</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BuyServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.BuyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfirmationServlet</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ConfirmationServlet</servlet-name>
    <servlet-class>main.java.com.epam.preprod.kushnarenko.servlet.ConfirmationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BuyServlet</servlet-name>
    <url-pattern>/buy</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>main.java.com.epam.preprod.kushnarenko.filter.LocaleFilter</filter-class>
    <init-param>
      <param-name>type</param-name>
      <param-value>session</param-value>
    </init-param>
    <init-param>
      <param-name>time</param-name>
      <param-value>1000</param-value>
    </init-param>
    <init-param>
      <param-name>languages</param-name>
      <param-value>en,be,ru,fi</param-value>
    </init-param>
    <init-param>
      <param-name>defaultlang</param-name>
      <param-value>en</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>main.java.com.epam.preprod.kushnarenko.filter.SecurityFilter</filter-class>
    <init-param>
      <param-name>securityFilePath</param-name>
      <param-value>/WEB-INF/security.xml</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>GzipFilter</filter-name>
    <filter-class>main.java.com.epam.preprod.kushnarenko.filter.GzipFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.css</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GzipFilter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>TurnOffCacheFilter</filter-name>
    <filter-class>main.java.com.epam.preprod.kushnarenko.filter.TurnOffCacheFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>TurnOffCacheFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>captchaType</param-name>
    <param-value>session</param-value>
  </context-param>
  <context-param>
    <param-name>captchaLiveTime</param-name>
    <param-value>150000</param-value>
  </context-param>
  <context-param>
    <param-name>chekingTime</param-name>
    <param-value>100000</param-value>
  </context-param>
  <context-param>
    <param-name>blockingUserTimeInMinutes</param-name>
    <param-value>10</param-value>
  </context-param>
  <context-param>
    <param-name>maxTriesCount</param-name>
    <param-value>5</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>locale</param-value>
  </context-param>
</web-app>